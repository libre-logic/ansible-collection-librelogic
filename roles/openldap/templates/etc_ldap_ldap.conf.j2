#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

BASE    {{ openldap_server_base_dn }}
URI     ldap://localhost
TLS_REQCERT never

#SIZELIMIT      12
#TIMELIMIT      15
#DEREF          never
TLS_CACERTDIR /etc/ldap/certs
TLS_CACERT /etc/ldap/certs/cert.crt
