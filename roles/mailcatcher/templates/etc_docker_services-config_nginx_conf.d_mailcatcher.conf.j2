# mailcatcher - only redirect http to https
server {
    listen      80;
    server_name {{ mailcatcher_fqdn }};
    return      301 https://{{ mailcatcher_fqdn }}$request_uri;

    # default index page
    # location / {
    #     root   /usr/share/nginx/html;
    #     index  index.html index.htm;
    # }
}

server {
    listen 443 ssl;
    server_name {{ mailcatcher_fqdn }};
    ssl_certificate /etc/nginx/ssl/selfsigned/{{ mailcatcher_fqdn }}.crt;
    ssl_certificate_key /etc/nginx/ssl/selfsigned/{{ mailcatcher_fqdn }}.key;

    # force use of docker internal DNS resolver
    resolver 127.0.0.11;

    # redirect server error pages to the static page /50x.html
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    # deny access to .htaccess files
    location ~ /\.ht {
        deny  all;
    }

    access_log  /var/log/nginx/access.log;
    error_log   /var/log/nginx/error.log;

    location / {
        auth_basic           "Authentication required";
        auth_basic_user_file /etc/nginx/conf.d/{{ mailcatcher_fqdn }}.htpasswd;
        proxy_pass          http://172.18.0.1:8025$request_uri;
        proxy_http_version  1.1;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Forward-For       $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forward-Proto     $scheme;
        proxy_set_header    X-Forward-Port      $server_port;
        proxy_set_header    X-Forwarded-Host    $host;
        proxy_set_header    X-Forwarded-Server  $host;
        proxy_set_header    X-Forwarded-SSL     on;
        proxy_set_header    X-Url-Scheme        https;
        proxy_set_header    X-Real-IP           $remote_addr;

        proxy_connect_timeout   30s;
        proxy_read_timeout      120s;
        proxy_redirect          off;
    }
}